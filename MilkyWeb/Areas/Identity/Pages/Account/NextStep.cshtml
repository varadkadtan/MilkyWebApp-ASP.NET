@page
@model NextStepModel

<div class="row">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-body">
                    <form id="nextStepForm" asp-page="./NextStep" method="post">
                        <h2 class="text-center">Sign Up</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <div class="text-danger">@error.ErrorMessage</div>
                            }
                        }

                        <div class="form-floating mb-3">
                            <input asp-for="Input.FirstName"  type = "text" class="form-control" autocomplete="on" aria-required="true" placeholder="First Name" />
                            <label asp-for="Input.FirstName">First Name</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.LastName" type="text" class="form-control" autocomplete="on" aria-required="true" placeholder="Surname" />
                            <label asp-for="Input.LastName">Surname</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Input.City" asp-items="@Model.RegisterVM.CityList" class="form-select">
                                <option value="">--- Select City ---</option>
                            </select>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Street" type="text" class="form-control" autocomplete="on" aria-required="true" placeholder="Street" />
                            <label asp-for="Input.Street">Street</label>
                            <span asp-validation-for="Input.Street" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.State" type="text" class="form-control" autocomplete="State" aria-required="true" placeholder="State" value="Kerala" readonly />
                            <label asp-for="Input.State">State</label>
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Address" type="text" class="form-control" autocomplete="Address" aria-required="true" placeholder="Street Address" />
                            <label asp-for="Input.Address">Street Address</label>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.PostalCode" type="text" class="form-control" autocomplete="on" aria-required="true" placeholder="Postal Code" maxlength="6" />
                            <label asp-for="Input.PostalCode">Postal Code</label>
                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" type="text" class="form-control" autocomplete="on" aria-required="true" placeholder="Postal Code" maxlength="10" />
                            <label asp-for="Input.PhoneNumber">Phone Number without (Country Code) </label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <button id="nextStepSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

